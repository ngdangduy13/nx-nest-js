{
  "version": 2,
  "env": {
    "MONGO_URI": "@shop_api_mongo_uri"
  },
  "builds": [
    {
      "src": "dist/apps/backend/main.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/apps/backend/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ]
}
